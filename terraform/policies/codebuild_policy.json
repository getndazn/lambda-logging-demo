{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Resource": [
        "*"
      ],
      "Action": [
        "logs:DescribeLogGroups",
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents",
        "iam:PassRole",
        "iam:GetRole",
        "kms:DescribeKey",
        "kms:Decrypt",
        "cloudformation:*",
        "events:DescribeRule",
        "events:PutRule",
        "events:PutTargets",
        "ssm:GetParameters",
        "ssm:GetParameter",
        "lambda:*",
        "s3:*"
      ]
    },
    {
      "Effect" : "Allow",
      "Resource": [
        "arn:aws:iam::${accountId}:role/${name}-${stage}-*${region}-lambdaRole"
      ],
      "Action": [
        "iam:CreateRole",
        "iam:PutRolePolicy"
      ]
    }
  ]
}
